{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": [".envrc"],
  "globalDependencies": ["**/.envrc"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["NEXT_PUBLIC_BACKEND_API"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "env": ["NEXT_PUBLIC_BACKEND_API"],
      "persistent": true,
       "dotEnv": [".env.production.local", ".envrc", ".env.production", ".env"]
    },
    "start": {
      "env": ["NEXT_PUBLIC_BACKEND_API"],
      "dotEnv": [".env.production.local", ".envrc", ".env.production", ".env"]
    }
  }
}
